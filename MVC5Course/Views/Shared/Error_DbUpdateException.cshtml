@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
    var ex = Model.Exception as System.Data.Entity.Infrastructure.DbUpdateException;
}

<h1 class="text-danger">@Model.ControllerName / @Model.ActionName Error.</h1>
<h3 class="text-danger">
    @ex.InnerException.InnerException.Message
</h3> 
<pre>@ex.ToString()</pre>